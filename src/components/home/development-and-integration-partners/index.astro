            <HeadingOne5xlCenterBoldWhite>{ data.title1 }</HeadingOne5xlCenterBoldWhite>
            <HeadingOne5xlCenterBoldWhite>{ data.title2 }</HeadingOne5xlCenterBoldWhite>
        </div>
        <div class="flex gap-10 overflow-hidden">
            <div class="flex gap-20 animate-loop-scroll">
                <div class="h-8 aspect-[5/3]">
                    <PictureInteranl 
                        alternative_text={ data.alternative_text }
                        source={ data.source1 }        
                    />
                </div>
                <div class="h-8 aspect-[7/2]">
                    <PictureInteranl 
                        alternative_text={ data.alternative_text }
                        source={ data.source2 }        
                    />
                </div>
                <div class="h-8 aspect-[8/2]">
                    <PictureInteranl 
                        alternative_text={ data.alternative_text }
                        source={ data.source3 }          
                    />
                </div>
                <div class="h-8 aspect-[7/1]">
                    <PictureInteranl 
                        alternative_text={ data.alternative_text }
                        source={ data.source4 }          
                    />
                </div>
                <div class="h-8 aspect-[13/2]">
                    <PictureInteranl 
                        alternative_text={ data.alternative_text }
                        source={ data.source5 }        
                    />
                </div>
                <div class="h-8 aspect-[4/1]">
                    <PictureInteranl 
                        alternative_text={ data.alternative_text }
                        source={ data.source6 }        
