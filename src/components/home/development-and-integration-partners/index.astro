---

// IMPORT ASTRO ATOMS
import HeadingOne5xlCenterBoldWhite from "@/atoms/atoms-nandini/headings/one/5xl/center/bold/white/index.astro"
import PictureInteranl from "@/atoms/picture/internal/index.astro"

// HARDCODED DARA 
const data ={

    alternative_text:"Image",
    source1:"/images/partner-1.svg",
    source2:"/images/partner-2.svg",
    source3:"/images/partner-3.svg",
    source4:"/images/partner-4.svg",
    source5:"/images/partner-5.svg",
    source6:"/images/partner-6.svg",
    source7:"/images/partner-7.svg",
    title1:"We are trusted development and",
