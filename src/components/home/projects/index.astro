        title: "Business Intelligence & Data Analytics",
    },

]

---

<section class="bg-[url('/images/projects-bg.png')] bg-cover bg-no-repeat py-16">
    <ContainerSmall>
        <div class="flex flex-col gap-20">
            <div class="flex flex-col gap-4 max-w-[600px]">
                <HeadingTwoLg>{ data.title }</HeadingTwoLg>
                <HeadingThree5Xl>{ data.subtitle }</HeadingThree5Xl>
                <ParagraphLgMedium>{ data.description }</ParagraphLgMedium>
            </div>
            <div class="flex flex-col gap-20">
                {

                    card_data.map( ( data, index ) => {

                        const card_layout = index % 2 === 0 ? "md:flex-row" : "md:flex-row-reverse"
                        const image_layout = index % 2 === 0 ? "" : "justify-end"

                        return (

                            <ProjectCard
                                card_layout={ card_layout }
                                image_layout={ image_layout }
                                links={ data.links }
                                logos={ data.logos }
                                source={ data.source }
                                subtitle={ data.subtitle }
                                title={ data.title }
                            />

                        )

                    })

                }
            </div>
            <div class="flex justify-center">
                <Link href={ data.button_link }>
                    <ButtonBlue>{ data.button_text }</ButtonBlue>
                </Link>
            </div> 
        </div>
    </ContainerSmall>
</section>
